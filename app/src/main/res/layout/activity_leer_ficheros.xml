<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeerFicherosActivity">

    <Button
        android:id="@+id/buttonLeerArchivos"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:background="@color/NaranjaRuano"
        android:text="Leer Archivos"
        app:layout_constraintBottom_toTopOf="@+id/tvVerFicheros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumeroFicheros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃºmero de Archivos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvVerFicheros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeerArchivos"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/tvVerFicheros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VerArchivos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeerArchivos"
        app:layout_constraintVertical_bias="0.509" />
</androidx.constraintlayout.widget.ConstraintLayout>